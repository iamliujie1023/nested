    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.liuj.demo.nestedscroll.BHomeStickNavLayout
        android:id="@+id/id_stickynavlayout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

